{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "lib": [
        "DOM", 
        "DOM.Iterable", 
        "ES5", 
        "ES6", 
        "ES7", 
        "ES2015", 
        "ES2016", 
        "ES2017", 
        "ES2018", 
        "ES2019",
        "ES2020",
        "WebWorker"
    ],
    "include": [
        "env.d.ts", 
        "src/**/*", 
        "src/**/*.vue",
        "vite-env.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/*",
        "src/**/*.stories.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": "."
    }
}
